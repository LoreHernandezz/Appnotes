<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoteDetailActivity">

    <TextView
        android:id="@+id/tvBackPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_margin="25dp"
        android:text="Título"
        android:textColor="@color/soft_purple"
        android:fontFamily="@font/sourgummy_medium"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDetailContent"
        android:layout_width="359dp"
        android:layout_height="392dp"
        android:layout_margin="25dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/delius_regular"
        android:text="Contenido"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBackPrincipal" />


    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="26dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="Cancelar y salir sin guardar"
        android:focusable="true"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintBottom_toTopOf="@+id/tvDetailContent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDetailDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:layout_marginTop="25dp"
        android:text="Fecha: 01/01/2025"
        android:fontFamily="@font/delius_regular"
        android:textColor="@color/soft_purple"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvDetailContent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvDetailCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categoría: Personal"
        android:textColor="@color/soft_purple"
        android:fontFamily="@font/delius_regular"
        android:textSize="16sp"
        android:layout_margin="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvDetailDate"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvDetailFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="★ Favorita"
        android:fontFamily="@font/delius_regular"
        android:textColor="@color/soft_purple"
        android:textSize="16sp"
        android:layout_margin="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvDetailCategory"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>